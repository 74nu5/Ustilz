{
  "$schema":
    "https://raw.githubusercontent.com/DotNetAnalyzers/StyleCopAnalyzers/master/StyleCop.Analyzers/StyleCop.Analyzers/Settings/stylecop.schema.json",
  "settings": {
    "readabilityRules": {
      "allowBuiltInTypeAliases": false
    },
    "documentationRules": {
      "documentationCulture": "fr-FR",
      "xmlHeader": false
    },
    "orderingRules": {
      "usingDirectivesPlacement": "insideNamespace",
      "blankLinesBetweenUsingGroups": "require",
      "systemUsingDirectivesFirst": true
    },
    "indentation": {
      "indentationSize": 4,
      "tabSize": 4,
      "useTabs": false
    },
    "layoutRules": {
      "allowConsecutiveUsings": false,
      "newlineAtEndOfFile": "require"
    },
    "maintainabilityRules": {
      "topLevelTypes": [
        "class",
        "enum",
        "interface",
        "struct"
      ]
    },
    "namingRules": {
      "allowCommonHungarianPrefixes": false
    }
  }
}
